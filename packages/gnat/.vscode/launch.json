{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "inputs": [
    {
      "type": "promptString",
      "id": "HUC",
      "description": "What HUC?",
      // "default": "17070202" // North Fork John Day
      "default": "17060304" // Really small HUC
      // "default": "17060103" // Asotin
    }
  ],  
  "configurations": [
    {
      "name": "Gnat",
      "type": "python",
      "request": "launch",
      "module": "gnat.gnat",
      "console": "integratedTerminal",
      // Add NATIONAL_PROJECT, INPUTS_FOLDER, DOWNLOAD_FOLDER to your .env file
      "args": [
        "${input:HUC}",
        // "--temp_folder", "{env:DOWNLOAD_FOLDER}/tmp",
        // "--force",
        // "--parallel",
        "--verbose"
      ]
    },
    {
      "name": "Version Bump",
      "type": "python",
      "module": "rscommons.version",
      "args": [
        "${workspaceFolder}/rscontext/__version__.py"
      ],
      "request": "launch",
      "console": "integratedTerminal"
    },
    {
      "name": "Confinement",
      "type": "python",
      "request": "launch",
      "module": "gnat.confinement",
      "console": "integratedTerminal",
      // Add NATIONAL_PROJECT, INPUTS_FOLDER, DOWNLOAD_FOLDER to your .env file
      "args": [
        "${input:HUC}",
        "{env:DATA_ROOT}/rs_context/${input:HUC}/hydrology/NHDFlowline.shp",
        "{env:DATA_ROOT}/vbet/${input:HUC}/outputs/vbet_50.shp",
        "{env:DATA_ROOT}/confinement/${input:HUC}", // output folder
        "BFwidth",
        "ValleyBottom",
        "--debug",
        "--verbose"
      ]
    },    
  ]
}